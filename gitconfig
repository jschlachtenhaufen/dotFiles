# This is Git's per-user configuration file.
[user]
    name = John Schlachtenhaufen
    email = jschlach25@gmail.com

[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --max-count=200
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --max-count=200
    co = checkout
    st = status
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD

[core]
    editor = vim

[push]
    default = simple
    
[pull]
    rebase = true

[web]
    browser = google-chrome

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[diff]
    tool = vimdiff

[difftool]
    prompt = false
